<div class="container flex form-global">
  <div class="form flex">
    <h3>Donne nous ta destination de rêve et tes disponibilités !</h3>
    <h5><%= "Trip : #{@trip.name} (#{@trip.month} jours)" %></h5>
    <% if PlaceProposal.where(user_id: current_user.id, trip_id: @trip.id).first %>
      <%= "Ton choix de destination est #{PlaceProposal.where(user_id: current_user.id, trip_id: @trip.id).first.place.city}" %>
    <% else %>
      <%= simple_form_for([@trip, @place_proposal]) do |f| %>
        <%= f.association :place, label: false, :label_method => lambda { |place| "#{place.city}" }, placeholder: "Destination" %>
        <%= f.submit "Ajoute ta destination préférée !", class: "btn button-border-blue" %>
      <% end %>
    <% end %>
    <hr>
    <% @trip_availabilities.each_with_index do |ta, index| %>
      <p>Créneau <%= index + 1 %></p>
      <% av = Availability.where(user_id: current_user.id, trip_availability_id: ta.id).first %>
      <% if av.is_a?(Availability) && av.available == "true" %>
        <%= link_to "Pas dispo", trip_availability_availability_path(ta, av), method: :patch %>
      <% else %>
        <% if av.is_a?(Availability) && av.available == "false" %>
          <%= link_to "Dispo", trip_availability_availability_path(ta, av), method: :patch %>
        <% else %>
          <%= link_to "Dispo", trip_availability_availabilities_path(ta), method: :post %>
        <% end %>
      <% end %>
      <% if ta.availabilities.first %>
        <%= Availability.where(user_id: current_user.id, trip_availability_id: ta.id).first.available %>
      <% end %>
      <p><%= ta.start_at.strftime("%d-%m-%Y") %></p>
      <p><%= ta.end_at.strftime("%d-%m-%Y") %></p>
    <% end %>
    <%= link_to "Next", trip_subscriptions_path, method: "post", class:"btn button-blue" %>
  </div>
</div>
