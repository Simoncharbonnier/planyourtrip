<%# CARD ATTENTES DISPOS %>
<div class="card-index-xl">
  <div class="card-index-xl-img" style="background-image: linear-gradient(rgba(0,0,0,0.8), rgba(0,0,0,0.6)), url('https://cdn.pixabay.com/photo/2016/01/09/18/27/camera-1130731_1280.jpg');">
    <div class="d-flex">
      <%# LEFT SIDE %>
      <div>
        <%# CARDS %>
        <div class="container-card-avatar-orange">
          <div class="mini-avatar">
            <%= image_tag image_url("https://kitt.lewagon.com/placeholder/users/#{trip.user.ghname}"), class:"mini-avatar-img"  %>
            <p class="first-name"><%= trip.user.username.capitalize %></p>
          </div>
          <% trip.subscriptions.each do |name| %>
            <% if name.user != trip.user %>
              <div class="mini-avatar">
                <%= image_tag image_url("https://kitt.lewagon.com/placeholder/users/#{name.user.ghname}"), class:"mini-avatar-img"  %>
                <p class="first-name"><%= name.user.username.capitalize %></p>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>

      <%# RIGHT SIDE %>
      <div class="px-4">
        <%# TOP %>
        <div class="progress-wrapper">
          <ul id="progressbar">
            <li id="calendar"><strong>Disponibilités</strong></li>
            <li id="destination"><strong>Destination</strong></li>
          </ul>
          <% if current_user == trip.user %>
            <% url = "http://www.planyourtripapp.me/trips/#{trip.id}/trip_availabilities/new" %>
            <div class="link" id="button-dispo" onclick="setClipboard(`<%= url %>`)" aria-describedby="tooltip">
              <div class="link-button">
                <i class="fas fa-external-link"></i>
              </div>
            </div>
          <% end %>
        </div>
        <div class="d-flex justify-content-between">
          <h2 id="card-index-xl-title">
          <strong><%= trip.name %></strong>
          </h2>
        </div>
        <%# MIDDLE %>
        <div>
          <%# DESC %>
          <div class="card-index-xl-texte">
            <p>Nous attentons encore les <br> disponibilités de Vos amis et leurs propositions de destination.</p>
          </div>
        </div>
        <%# BOTTOM %>
        <div class="footer-card-index-xl">
          <% if trip.user == current_user %>
            <%= link_to "Booker", new_trip_trip_availability_path(trip), class: "button-orange-xxl mt-5" %>
          <% else %>
            <%= link_to "Booker", new_trip_trip_availability_path(trip), class: "button-orange-xxl no-show" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
