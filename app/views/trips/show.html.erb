<% if @trip.status == "voting" %>
  <div class="container title-wrapper">
      <div class="show-title-text">
        <h2 class="show-h2"><strong><%=@trip.name%></strong></h2>
        <p>Ça colle pour tout le monde du 10 au 17 Juillet !</p>
      </div>
    <div class="title-show"></div>
    <p id="subtitle-show">Dépêchez-vous, vos amis attendent votre vote !</p>
  </div>

  <div class="container d-flex">
    <div class="container container-trip">
      <% @trip.place_proposals.uniq { |pp| pp.place_id }.each do |place_proposal|%>
          <div class="card-show">
            <div class="img-show" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path place_proposal.place.photo.key, crop: :fill, height: 400 %>'); background-size: cover; background-repeat: no-repeat)"></div>
           <div class="card-infos-show">
             <h2><%= place_proposal.place.city %></h2>
            </div>
            <div class="card-totem-show">
                <div class="mini-card-show-1">
                  <p><i class="fas fa-bed"></i><p id="logement">LOGEMENT</p><p id="price-place">75€</p>
               </div>
                <div class="mini-card-show-2">
                 <p><i class="fas fa-thermometer-half"></i><P id="meteo">METEO</p><P id="temperature">10°C</p>
                </div>
                <div class="mini-card-show-3">
                  <p><i class="fas fa-beer"></i><p id="beer">BIERE</p><p id="price-beer">6€</p>
                </div>
              <div class="button-show-card">
               <%= link_to "Voter", trip_votes_path(@trip, pp: place_proposal), method: :post, class: "btn button-vote" %>
              </div>
               <div class="footer-card-show">
                 <div class="footer-card-show-icon">
                   <i class="fas fa-plane"></i>
                 </div>
                  <div class="footer-card-show-text">
                    <p id="price-footer-text">PRIX</p>
                    <p id="footer-text">à partir de</p>
                 </div>
                 <div class="footer-card-show-price">
                   <p id="price-plane">60€</p>
                 </div>
              </div>
            </div>
         </div>
     <% end %>
    </div>

    <div id="map"
          data-controller="mapbox"
          data-mapbox-markers-value="<%= @markers.to_json %>"
          data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>

<% elsif @trip.status == "confirmed" %>
  dashboard confirmed trip
  <div class="container">
    <div class="img-show-dashboard" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @trip.place_proposal.place.photo.key %>'); background-size: cover; background-repeat: no-repeat)"></div>
    <div class="container-chat-todo">
      <div class="chat">
      <h2 class="show-h2"><strong>chat</strong></h2>
      </div>
      <div class="todo">
        <h1 class="title-dashboard"><strong><%=@trip.name%></strong></h1>
        <p class="date-dashboard"><%= @trip.trip_availabilities.first.start_at.strftime('%d/%m/%Y') %> - <%= @trip.trip_availabilities.first.end_at.strftime('%d/%m/%Y') %></p>
        <div class="avatar-dashboard">
          <%@trip.subscriptions.each do |name| %>
            <div class="card-avatar">
             <%=  image_tag image_url("https://kitt.lewagon.com/placeholder/users/#{name.user.ghname}"),class:"avatar"  %>
              <p class="first-name"><%=name.user.username%></p>
              <div class="check">
                 <i class="fas fa-check"></i>
              </div>
            </div>
          <% end %>
        </div>
        <h2 class="title-todo-dashboard"><strong>To do list</strong></h2>
      </div>
    </div>
  </div>
<% end %>
